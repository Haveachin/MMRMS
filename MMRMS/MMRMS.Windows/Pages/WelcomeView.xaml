<Page x:Class="MMRMS.Windows.Pages.WelcomeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MMRMS.Windows.Pages"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal" 
      TextOptions.TextRenderingMode="Auto"        
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomeView">

    <StackPanel>
        <md:Card md:ShadowAssist.ShadowDepth="Depth1" md:ShadowAssist.ShadowEdges="Bottom" Padding="16">
            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}">Welcome to MMRMS [Indev]</TextBlock>
        </md:Card>
        <TextBlock Margin="15 20" FontSize="16">Start by opening a project with the button in the upper left corner.</TextBlock>
    </StackPanel>
</Page>
